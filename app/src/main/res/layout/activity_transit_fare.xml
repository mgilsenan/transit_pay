<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fares_vector"
    tools:context=".Payment.TransitFareActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="157dp"
        android:text="Select your transit"
        android:textColor="@color/jungleGreen"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="204dp"
        android:text="fare ticket."
        android:textColor="@color/jungleGreen"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/one_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/two_trip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_custom"
        android:text="@string/trip_one"
        android:textColor="@android:color/black"
        app:backgroundTint="#FFCD05" />

    <Button
        android:id="@+id/two_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ten_trip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_custom"
        android:text="@string/two_trip"
        android:textColor="@android:color/black"
        app:backgroundTint="#FFCD05" />

    <Button
        android:id="@+id/ten_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/threeday_trip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_custom"
        android:text="@string/ten_trip"
        android:textColor="@android:color/black"
        app:backgroundTint="#FFCD05" />

    <Button
        android:id="@+id/threeday_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weekly_trip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_custom"
        android:text="@string/threeday_trip"
        android:textColor="@android:color/black"
        app:backgroundTint="#FFCD05" />

    <Button
        android:id="@+id/weekly_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/monthly_trip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_custom"
        android:text="@string/weekly_trip"
        android:textColor="@android:color/black"
        app:backgroundTint="#FFCD05" />

    <Button
        android:id="@+id/monthly_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/btn_custom"
        android:text="@string/monthly_trip"
        android:textColor="@android:color/black"
        app:backgroundTint="#FFCD05" />


</RelativeLayout>