<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    tools:context=".MainMenuActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="283dp"
        android:layout_height="285dp"
        app:layout_constraintBottom_toTopOf="@+id/triphistoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/remainingfare_design_4" />


    <ImageButton
        android:id="@+id/fareviewchangebtn"
        android:layout_width="65dp"
        android:layout_height="53dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/fareviewtxt"
        app:layout_constraintStart_toEndOf="@+id/fareviewtxt"
        app:layout_constraintTop_toTopOf="@+id/fareviewtxt"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/changeviewbtn5" />

    <TextView
        android:id="@+id/fareviewtxt"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginBottom="94dp"
        android:text="remainingfare"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageView3" />


    <Button
        android:id="@+id/LocationButton"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:text="Location"
        android:textColor="#050505"
        app:backgroundTint="#ABF8C539"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/citylinesButton"
        app:layout_constraintStart_toStartOf="@+id/citylinesButton" />

    <Button
        android:id="@+id/citylinesButton"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:text="City Transit Lines"
        android:textColor="#050505"
        app:backgroundTint="#ABF8C539"
        app:iconTint="#090808"
        app:layout_constraintBottom_toTopOf="@+id/LocationButton"
        app:layout_constraintEnd_toEndOf="@+id/triphistoryButton"
        app:layout_constraintStart_toStartOf="@+id/triphistoryButton" />

    <Button
        android:id="@+id/triphistoryButton"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:text="Trip history"
        android:textColor="#050505"
        app:backgroundTint="#ABF8C539"
        app:layout_constraintBottom_toTopOf="@+id/citylinesButton"
        app:layout_constraintEnd_toEndOf="@+id/purchasefareButton"
        app:layout_constraintStart_toStartOf="@+id/purchasefareButton" />

    <Button
        android:id="@+id/purchasefareButton"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="20dp"
        android:text="Purchase Fare"
        android:textColor="#050505"
        app:backgroundTint="#ABF8C539"
        app:layout_constraintBottom_toTopOf="@+id/triphistoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
