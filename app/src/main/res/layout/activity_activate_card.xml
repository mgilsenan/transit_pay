<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Payment.ActivateCardActivity">

    <Button
        android:id="@+id/activatetagButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate Card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.879" />

    <TextView
        android:id="@+id/phonenumberButton"
        android:layout_width="415dp"
        android:layout_height="99dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/amiko_semibold"
        android:shadowColor="#14230F"
        android:text="ACTIVATE YOUR  CARD"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#14230F"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/infoTextView"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="@+id/infoTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardImageView4"
        android:layout_width="546dp"
        android:layout_height="479dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242"
        app:srcCompat="@drawable/transitcard" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="278dp"
        android:layout_height="63dp"
        android:layout_marginBottom="52dp"
        android:foregroundGravity="center_horizontal"
        android:text="CLICK ON ACTIVATE CARD AND WAIT FOR CONFIRMATION"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/activatetagButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>